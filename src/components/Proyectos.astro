  <script>
  // Esperamos a que el DOM esté completamente cargado
  document.addEventListener('DOMContentLoaded', () => {
    // Seleccionamos los elementos que se animarán
    const elements = document.querySelectorAll('.scroll-animate');

    // Configuramos el Intersection Observer
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            // Añadimos clases de transición para una aparición más gradual
            entry.target.style.transition = 'opacity 1.5s ease-out, transform 1.5s ease-out';
            entry.target.style.opacity = '1';
            entry.target.style.transform = 'translateY(0)';
            observer.unobserve(entry.target); // Detenemos la observación del elemento ya animado
          }
        });
      },
      { threshold: 0.1 } // El 10% del elemento debe estar visible
    );

    // Aplicamos estilos iniciales a los elementos
    elements.forEach((el) => {
      el.style.opacity = '0'; // Inicialmente invisible
      el.style.transform = 'translateY(20px)'; // Más desplazamiento inicial
      observer.observe(el);
    });
  });
</script>
  