---
import Titulos from "./Titulos.astro";
import Curriculum from "./Curriculum.astro"
import Tarjeta from "./Tarjeta.astro";
import Aboutme from "./Aboutme.astro";

---
 <div class="grid grid-cols-1 gap-6 md:grid-cols-3 xl:grid-cols-3 gap-12 justify-center items-center h-screen fade-in-left">
  <div class="order-3 sm:order-1"><Curriculum/></div>
  <div class="order-1 sm:order-2"><Tarjeta/></div>
  <div class="order-2 sm:order-3"><Titulos/></div>
</div>
<Aboutme/>

<style>
  /* Define la animación fadeInLeft */
  @keyframes fadeInLeft {
    0% {
      opacity: 0;
      transform: translateX(-20px);
    }
    100% {
      opacity: 1;
      transform: translateX(0);
    }
  }
  
  /* Aplica la animación a una clase personalizada */
  .fade-in-left {
    animation: fadeInLeft 1.5s ease-out forwards;
  }
  </style>
